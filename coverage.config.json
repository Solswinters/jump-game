{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/__tests__/**",
    "src/test-utils/**",
    "**/*.d.ts"
  ],
  "thresholds": {
    "statements": 80,
    "branches": 75,
    "functions": 80,
    "lines": 80
  }
}
