# NPM Configuration

# Use exact versions by default
save-exact=true

# Increase network timeout
fetch-retry-maxtimeout=60000
fetch-retry-mintimeout=10000
fetch-retries=3

# Enable package-lock
package-lock=true

# Engine strict
engine-strict=true

# Audit level
audit-level=moderate

# Legacy peer deps (for compatibility)
legacy-peer-deps=false

# Progress
progress=true

